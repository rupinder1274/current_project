 <!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/stylesheets/styles.css">
  <style>
    .dashboard-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }
    .dashboard-header-left a,
    .dashboard-header-right a {
      font-size: 15px;
    }
    /* Sticky header */
    thead th {
      position: sticky;
      top: 0;
      z-index: 2;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="dashboard-header">
      <div class="dashboard-header-left">
        <a href="/upload-employees">📤 Upload Employees</a>
      </div>
      <h1>📊 Admin Dashboard</h1>
      <div class="dashboard-header-right">
        <a href="/logout">🚪 Logout</a>
      </div>
    </div>
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Emp Code</th>
            <th>Name</th>
            <th>Payroll Company</th>
            <th>Division</th>
            <th>Location</th>
            <th>Designation</th>
            <th>Home Practice</th>
            <th>Practice Manager</th>
            <th>Project</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (employees.length === 0) { %>
            <tr>
              <td colspan="10" style="text-align:center;">No employees found.</td>
            </tr>
          <% } else { %>
            <% employees.forEach(employee => { %>
              <tr>
                <td data-label="Emp Code"><%= employee.empCode %></td>
                <td data-label="Name">👤 <%= employee.name %></td>
                <td data-label="Payroll Company"><%= employee.payrollCompany %></td>
                <td data-label="Division"><%= employee.division %></td>
                <td data-label="Location"><%= employee.location %></td>
                <td data-label="Designation"><%= employee.designation %></td>
                <td data-label="Home Practice"><%= employee.homePractice %></td>
                <td data-label="Practice Manager"><%= employee.practiceManager %></td>
                <td data-label="Project">
                  <% if (employee.project) { %>
                    <span style="background-color:#d4edda; color:#155724; padding:3px 8px; border-radius:12px; font-size:12px;">
                      📌 <%= employee.project %>
                    </span>
                  <% } else { %>
                    <span style="background-color:#f8d7da; color:#721c24; padding:3px 8px; border-radius:12px; font-size:12px;">
                      🔴 Not Assigned
                    </span>
                  <% } %>
                </td>
                <td class="actions" data-label="Actions">
                  <a href="/employees/<%= employee.empCode %>/assign-project">📌 Assign</a>

                  <% if (employee.project) { %>
                    <form method="POST" action="/employees/<%= employee.empCode %>/dismiss-project" style="display:inline;">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <button type="submit" onclick="return confirm('Are you sure you want to dismiss this project?');">❌ Dismiss</button>
                    </form>
                  <% } %>

                  <a href="/employees/<%= employee.empCode %>/edit">✏️ Edit</a>
                  <form method="POST" action="/employees/<%= employee.empCode %>/delete" onsubmit="return confirm('Are you sure you want to delete this employee?');" style="display:inline;">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit">🗑 Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>



